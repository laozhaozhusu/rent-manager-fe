{
  "include": [
    "vite-env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.ts",
    "vite.config.ts"
  ],
  "compilerOptions": {
    "strict": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "composite": true,
    "skipLibCheck": true
  }
}
